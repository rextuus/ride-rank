{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="mb-3">{{ coaster.name }}</h2>
    <p class="text-muted">{{ coaster.park }} – <em>{{ coaster.country }}</em></p>

    <div class="coaster-detail-card mb-4">
        <div class="position-relative">
            <img src="{{ coaster.image }}" class="img-fluid rounded" alt="{{ coaster.name }}">
            {% if coaster.ridden %}
                <span class="badge bg-success position-absolute top-0 end-0 m-2">Gefahren</span>
            {% endif %}
        </div>

        <div class="mt-3">
            <h5>Technische Daten</h5>
            <ul class="list-unstyled small">
                <li><strong>Hersteller:</strong> {{ coaster.manufacturer }}</li>
                <li><strong>Typ:</strong> {{ coaster.type }}</li>
                <li><strong>Antrieb:</strong> {{ coaster.drive }}</li>
                <li><strong>Inversionen:</strong> {{ coaster.inversions }}</li>
                <li><strong>Länge:</strong> {{ coaster.length }}</li>
                <li><strong>Höhe:</strong> {{ coaster.height }}</li>
                <li><strong>Baujahr:</strong> {{ coaster.year }}</li>
            </ul>
        </div>

        <!-- Bewertungen-Box -->
        {{ component('Ratings', {
            'avgRating': coaster.avgRating,
            'userRating': coaster.userRating,
            'avgCategories': coaster.avgCategories,
            'userCategories': coaster.userCategories
        }) }}

    </div>

    <button class="btn btn-success w-100">Als gefahren markieren</button>
{% endblock %}
