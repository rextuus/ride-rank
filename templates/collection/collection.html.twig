{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('collection') }}
{% endblock %}

{% block body %}
    </div> {# Close the default container opened in base.html.twig #}
    <div class="collection-page album-theme mb-3">
        <div class="album-container">
            <div class="album-page-inner">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="m-0">Meine Sammlung</h2>

                    <div class="view-controls">
                        <span class="me-2 d-none d-sm-inline">Auflösung:</span>
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_collection', {columns: 1}) }}" class="btn btn-outline-primary btn-sm {{ columns == 1 ? 'active' }}">1</a>
                            <a href="{{ path('app_collection', {columns: 2}) }}" class="btn btn-outline-primary btn-sm {{ columns == 2 ? 'active' }}">2</a>
                            <a href="{{ path('app_collection', {columns: 4}) }}" class="btn btn-outline-primary btn-sm {{ columns == 4 ? 'active' }}">4</a>
                        </div>
                    </div>
                </div>

                {% set activeFilter = false %}
                {% set activeSort = true %}

                <div class="collection-header">
                    <button class="btn btn-filter {{ activeFilter ? 'active' }}">
                        {{ ux_icon('material-symbols:filter-alt-outline', {class: 'icon'}) }}
                        <span>Filter</span>
                    </button>
                    <button class="btn btn-sort {{ activeSort ? 'active' }}">
                        {{ ux_icon('material-symbols:sort', {class: 'icon'}) }}
                        <span>Sortieren</span>
                    </button>
                </div>

                {% for park, coasters in coastersByPark %}
                    <div class="park-section">
                        <div class="park-title">
                            {{ ux_icon('tabler:rollercoaster', {style: 'height: 20px;'}) }}
                            {{ park }}
                        </div>

                        <div class="coaster-grid cols-{{ columns }}">
                            {% for coaster in coasters %}
                                <div class="coaster-card position-relative {{ not coaster.ridden ? 'not-ridden' }}">
                                    <div class="coaster-image-wrapper">
                                        <img src="{{ coaster.image }}" class="img-fluid" alt="{{ coaster.name }}">

                                        <div class="coaster-image-title">
                                            <h5 class="card-title">{{ coaster.name }}</h5>
                                        </div>

                                        <div class="coaster-image-meta">
                                            <span>{{ coaster.park }}</span>
                                            <span class="mx-1">–</span>
                                            <em>{{ coaster.country }}</em>
                                        </div>

                                        <div class="info-overlay">
                                            <a href="{{ path('app_coaster_show', { coaster: coaster.id }) }}"
                                               class="btn btn-sm btn-info-circle" title="Details">
                                                {{ ux_icon('material-symbols:info-outline') }}
                                            </a>
                                        </div>
                                    </div>

                                    {#
                                    <div class="stars">
                                        {{ component('Rating', {'value': coaster.rating|round(0, 'floor')}) }}
                                    </div>
                                    #}

                                    <div class="elo-wrapper">
                                        <div class="elo-label">
                                            <span class="elo-rank">#{{ coaster.rank }}</span>
                                        </div>
                                        <div class="elo-bar">
                                            <div
                                                    class="elo-bar-fill"
                                                    style="width: {{ coaster.eloPercent }}%;"
                                            ></div>
                                        </div>
                                    </div>

                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}

