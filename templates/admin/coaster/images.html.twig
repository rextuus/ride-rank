{% extends 'base.html.twig' %}

{% block title %}
    Coaster Images â€“ {{ coaster.name ?? coaster.id }}
{% endblock %}

{% block body %}
    <div class="container py-4">

        <h1 class="mb-4">
            Image Selection
            <small class="text-muted">
                for Coaster #{{ coaster.id }}
            </small>
        </h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% if images is empty %}
            <div class="alert alert-warning">
                No images available.
            </div>
        {% else %}
            <form method="post">
                <div class="row g-4">

                    {% for image in images %}
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="card h-100">

                                <div class="position-relative">
                                    <img
                                            src="{{ image }}"
                                            class="card-img-top"
                                            style="object-fit: cover; height: 180px;"
                                            alt="Coaster image"
                                    >
                                    <button
                                            type="button"
                                            class="btn btn-sm btn-light position-absolute top-0 end-0 m-2 opacity-75"
                                            data-bs-toggle="modal"
                                            data-bs-target="#imageModal"
                                            data-bs-image="{{ image }}"
                                            title="View full image"
                                    >
                                        View
                                    </button>
                                </div>

                                <div class="card-body text-center">
                                    <div class="form-check">
                                        <input
                                                class="form-check-input"
                                                type="radio"
                                                name="image"
                                                value="{{ image }}"
                                                id="image_{{ loop.index }}"
                                                required
                                        >
                                        <label
                                                class="form-check-label"
                                                for="image_{{ loop.index }}"
                                        >
                                            Select
                                        </label>
                                    </div>
                                </div>

                            </div>
                        </div>
                    {% endfor %}

                </div>

                <div class="mt-4 text-end">
                    <button class="btn btn-primary">
                        Transform selected image
                    </button>
                </div>
            </form>
        {% endif %}

    </div>

    <!-- Modal -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imageModalLabel">Image Preview</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center p-0">
                    <img src="" id="modalImage" class="img-fluid" alt="Full size preview">
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const imageModal = document.getElementById('imageModal');
            if (imageModal) {
                imageModal.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    const imageUrl = button.getAttribute('data-bs-image');
                    const modalImage = imageModal.querySelector('#modalImage');
                    modalImage.src = imageUrl;
                });
            }
        });
    </script>
{% endblock %}
